<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#FFF"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewCardProduct"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/banner1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPriceProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:textSize="16dp"
        android:textColor="#333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewCardProduct" />

    <TextView
        android:id="@+id/textViewPriceProductLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="16dp"
        android:textColor="#333"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textViewPriceProduct"
        app:layout_constraintTop_toBottomOf="@id/imageViewCardProduct" />

    <ImageView
        android:id="@+id/imageViewFavoriteProductLike"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_favorite_border"
        android:tint="#444"
        android:foregroundTint="#444"
        android:backgroundTint="#444"
        app:layout_constraintTop_toBottomOf="@id/imageViewCardProduct"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>