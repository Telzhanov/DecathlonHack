<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:layout_width="300dp"
                                                 android:layout_height="180dp"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
                android:id="@+id/titleClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="Клуб:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp"/>
        <TextView
                android:id="@+id/nameClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@id/titleClub"
                app:layout_constraintTop_toTopOf="@id/titleClub"
                android:layout_marginStart="20dp"
                android:text="ДарФит"/>
        <TextView
                android:id="@+id/priceClubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/titleClub"
                app:layout_constraintTop_toBottomOf="@id/titleClub"
                android:layout_marginTop="12dp"
                android:text="Цена:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp"/>
        <TextView
                android:id="@+id/priceClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/nameClub"
                app:layout_constraintTop_toBottomOf="@id/titleClub"
                android:layout_marginTop="12dp"
                android:text="12000тг(в месяц)"
                android:textSize="22sp"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bonus_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/priceClub"
            android:layout_marginTop="30dp"
    >

        <TextView
                android:id="@+id/bonusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="+500"
                android:textStyle="bold"
                android:textColor="#eee"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/bonusTextViewRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="decopoints"
                android:textColor="#fff"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@id/bonusTextView"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"/>

    </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>