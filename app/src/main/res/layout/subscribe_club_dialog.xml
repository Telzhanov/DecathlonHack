<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:layout_width="300dp"
                                                 android:layout_height="270dp"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
                android:id="@+id/titleClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="Клуб:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp"/>
        <TextView
                android:id="@+id/nameClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@id/titleClub"
                app:layout_constraintTop_toTopOf="@id/titleClub"
                android:layout_marginStart="20dp"
                android:text="ДарФит"/>
        <TextView
                android:id="@+id/priceClubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/titleClub"
                app:layout_constraintTop_toBottomOf="@id/titleClub"
                android:layout_marginTop="12dp"
                android:text="Цена:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp"/>
        <TextView
                android:id="@+id/priceClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/nameClub"
                app:layout_constraintTop_toBottomOf="@id/titleClub"
                android:layout_marginTop="12dp"
                android:text="12000тг(в месяц)"
                android:textSize="22sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleCoin"
                app:layout_constraintTop_toBottomOf="@id/priceClub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:text="Сумма бонусов:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp"/>
        <TextView
                android:id="@+id/ostatok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Остаток:400)"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/titleCoin"
                app:layout_constraintEnd_toEndOf="@id/titleCoin"
                app:layout_constraintTop_toBottomOf="@id/titleCoin"/>
        <EditText
                android:id="@+id/summaCoin"
                android:layout_width="0dp"
                android:layout_height="52dp"
                app:layout_constraintTop_toBottomOf="@id/ostatok"
                android:hint="бонус"
                app:layout_constraintStart_toStartOf="@id/titleCoin"
                app:layout_constraintEnd_toEndOf="@id/titleCoin"/>

        </android.support.constraint.ConstraintLayout>